---
import { redirect } from 'astro:middleware';

// Redirect to the PDF file
const pdfUrl = 'Clinton Marrs - Manager, Brand Studio - Weblflow.pdf';
return new Response(null, {
  status: 302,
  headers: {
    'Location': pdfUrl,
    // The headers below tell browsers to download the file instead of displaying it
    'Content-Disposition': 'attachment; filename="webflow-guide.pdf"',
  },
});
---
